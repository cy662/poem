{
  "compilerOptions": {
    "composite": true,
    "skipLibCheck": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": [
    "vite.config.ts",
    "vite.config.*",
    "vitest.config.ts",
    "cypress.config.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}